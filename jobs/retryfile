pipeline {
    agent any

    parameters{
        string(name:'Env',defaultValue:'QA',description:'this is desc')
        choice(name:'Env',choices:['QA','UAT'],description:'this is desc')
        boolean(name:'Bool',defaultValue=true,description:'this is bool')
    }
    stages{
        stage('Compile'){    
            steps{
                withMaven(maven:'maven'){
                  bat 'mvn clean compile'
                }
            }
        }

        stage('Test'){    
            steps{
                withMaven(maven:'maven'){
                  bat 'mvn test'
                }
            }
        }

    }
    post{
        always{
            echo 'I will always execute'
        }
        success{
            echo 'I will execute if i am passed'
        }

       failure{
            echo 'I will execute if i am failed'
        }



        }
}
