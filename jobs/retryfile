pipeline {
    agent any
    stages {
        stage('Compile') {
            steps {
                bat 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                catchError(buildResult: 'UNSTABLE') {  // Continue even if tests fail
                    bat 'mvn test'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed!'
        }
        success {
            echo 'Build was successful 🎉'
        }
        failure {
            echo 'Build failed ❌'
        }
        unstable {
            echo 'Some tests failed, but continuing... ⚠️'
        }
    }
}
