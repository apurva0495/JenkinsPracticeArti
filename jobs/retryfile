pipeline {
    agent any
    tools {
        maven 'maven'  // Must match the configured Maven name
    }
    stages {
        stage('Compile') {
            steps {            
                    bat 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                    bat 'mvn test'
            }
        }

        stage('Deploy') {
            steps {               
                    bat 'mvn deploy'
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed!'
        }
        success {
            echo 'Build was successful'
        }
        failure {
            echo 'Build failed'
        }
        
    }
}
