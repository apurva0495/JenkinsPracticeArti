pipeline {
    agent any
    tools {
        maven 'maven'  // Must match the configured Maven name
    }
    stages {
        stage('Compile') {
            steps {
                withMaven(maven: 'maven') {
                    bat 'mvn clean compile'
                }
            }
        }

        stage('Test') {
            steps {
                withMaven(maven: 'maven') {
                    catchError(buildResult: 'UNSTABLE') {
                        bat 'mvn test'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                withMaven(maven: 'maven') {
                    bat 'mvn deploy'
                }
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline execution completed!'
        }
        success {
            echo 'Build was successful üéâ'
        }
        failure {
            echo 'Build failed ‚ùå'
        }
        unstable {
            echo 'Some tests failed, but continuing... ‚ö†Ô∏è'
        }
    }
}
